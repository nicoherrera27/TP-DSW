---
import '../../styles/header.css';

const navLinks = [
  { href: '/cartelera', text: 'Cartelera' },
  { href: '/promociones', text: 'Promociones' },
  { href: '/cines', text: 'Cines' },
  { href: '/funciones-especiales', text: 'Funciones Especiales' },
];
---

<header class="main-header">
  <div class="container">
    <div class="top-bar">
      <a href="/" class="logo">CineVerse</a>
      <div class="user-actions">
        <a href="/login">Iniciar Sesión</a>
        <a href="/register">Registrarse</a>
        <a href="/admin/importar">Importar Películas</a>
      </div>
    </div>
    <nav class="main-nav">
      <ul>
        {
          navLinks.map((link) => (
            <li>
              <a href={link.href}>{link.text}</a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</header>
